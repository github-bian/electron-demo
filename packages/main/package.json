{
  "name": "@electron-react-monorepo/main",
  "version": "1.0.0",
  "description": "Electron main process",
  "main": "./dist/main.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc && electron .",
    "dev:wait": "sleep 3 && tsc && electron .",
    "start": "electron .",
    "clean:dist": "rm -rf ../../dist",
    "package": "npm run clean:dist && electron-builder",
    "package:win": "npm run clean:dist && electron-builder --win --x64",
    "package:mac": "npm run clean:dist && electron-builder --mac --arm64",
    "package:mac:universal": "npm run clean:dist && electron-builder --mac --universal",
    "package:all": "npm run clean:dist && electron-builder -mw --arm64 --x64",
    "clean": "rm -rf dist *.tsbuildinfo release",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@electron-react-monorepo/shared": "workspace:*",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3"
  },
  "build": {
    "appId": "com.electron.react.app",
    "productName": "ElectronReactApp",
    "directories": {
      "output": "../../dist"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../renderer/out",
        "to": "renderer/out",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "icon": "assets/icons/icon.png",
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": ["arm64", "x64"]
        },
        {
          "target": "zip",
          "arch": ["arm64", "x64"]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": null,
      "entitlementsInherit": null
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "win": {
      "icon": "assets/icons/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Electron App"
    },
    "linux": {
      "icon": "assets/icons/icon.png",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
